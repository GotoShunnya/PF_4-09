<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <%= link_to user_post_favorites_path(current_user, post), method: :delete, remote: true do %><!--remote: trueで非同期通信に-->
      ♥<%= post.favorites.count %>わがまま！
    <% end %>
  <% else %>
    <%= link_to user_post_favorites_path(current_user, post), method: :post, remote: true do %>
     ♡<%= post.favorites.count %>わがまま！
    <% end %>
  <% end %>

<% else %><!--未ログイン時はfavoritesの数だけ表示
  <%= post.favorites.count %>わがまま！
<% end %>