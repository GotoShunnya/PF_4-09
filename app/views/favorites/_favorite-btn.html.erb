<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true do %><!--remote: trueで非同期通信に-->
    ♥<%= post.favorites.count %>わがまま！
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true do %>
    ♡<%= post.favorites.count %>わがまま！
  <% end %>
<% end %>
