<h1>確認画面</h1>
<%= form_with model: @inquiry, url: inquiries_thanks_path, local: true do |f| %>
  <table>
    <thead>
      <tr>
        <th>名前</th>
        <td>
          <%= f.hidden_field :name %>
          <%= @inquiry.name %>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
          <%= f.hidden_field :email %>
          <%= @inquiry.email %>
        </td>
      </tr>
      <tr>
        <th>お問い合わせ内容</th>
        <td>
          <%= f.hidden_field :message %>
          <%= @inquiry.message %>
        </td>
      </tr>
      <tr>
        <td><%= f.submit "送信" %></td>
      </tr>
    </thead>
  </table>
<% end %>