<h1>お問い合わせフォーム</h1>
<%= form_with model: @inquiry, url: inquiries_confirm_path, local: true do |f| %>
  <table>
    <thead>
      <tr>
        <th>名前</th>
        <td><%= f.text_field :name, value: current_user.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email, value: current_user.email %></td>
      </tr>
      <tr>
        <th>お問い合わせ内容</th>
        <td><%= f.text_area :message %></td>
      </tr>
      <tr>
        <td><%= f.submit "確認" %></td>
      </tr>
    </thead>
  </table>
<% end %>
