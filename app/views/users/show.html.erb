<h1>マイページ</h1>

<table>
  <thead>
    <tr>
      <th>名前（ニックネーム）<%= current_user.name %></th>
    </tr>
    <tr>
      <th>かな <%= @user.name_kana %></th>
    </tr>
    <tr>
      <th>自己紹介文 <%= @user.introduction %></th>
    </tr>
    <tr>
      <th>プロフィール写真 <%= attachment_image_tag @user, :profile_image, format:"jpeg", size:"90x90" %></th>
    </tr>
    <tr>
      <th>メールアドレス <%= @user.email %></th>
    </tr>
    <tr>
      <th>電話番号 <%= @user.phone_number %></th>
    </tr>
  </thead>
</table>

<%= link_to "編集する", edit_user_path(@user) %>